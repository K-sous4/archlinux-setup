# Example .zshrc configuration with Powerlevel10k support
# Copy this to ~/.zshrc and customize as needed

# If not running interactively, don't do anything
[[ -o interactive ]] || return

# ==========================================
# POWERLEVEL10K INSTANT PROMPT SETUP
# ==========================================
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# ==========================================
# OH MY ZSH SETUP (framework for Zsh)
# ==========================================
export ZSH="$HOME/.oh-my-zsh"

if [[ -d $ZSH ]]; then
    # Set theme to Powerlevel10k
    ZSH_THEME="powerlevel10k/powerlevel10k"
    
    # Plugins for better productivity
    plugins=(
        git                          # Git aliases and functions
        arch                         # Arch Linux helpers
        extract                      # Easy archive extraction
        history-substring-search     # Search through history with up/down arrows
        docker                       # Docker completion
        sudo                         # Prepend 'sudo' with ESC+ESC
        colorize                     # Syntax highlighting for cat
        colored-man-pages            # Colored manual pages
    )
    
    source $ZSH/oh-my-zsh.sh
fi

# History settings
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt SHARE_HISTORY
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE

# Enable completion
autoload -Uz compinit && compinit

# Enable extended glob patterns
setopt EXTENDED_GLOB

# Environment variables
export EDITOR=nano
export VISUAL=nano
export PAGER=less

# Aliases
alias ll='ls -lah'
alias la='ls -lA'
alias l='ls -CF'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias cl='clear'

# Functions
extract() {
    if [ -f $1 ]; then
        case $1 in
            *.tar.bz2)   tar xjf $1   ;;
            *.tar.gz)    tar xzf $1   ;;
            *.bz2)       bunzip2 $1   ;;
            *.rar)       unrar e $1   ;;
            *.gz)        gunzip $1    ;;
            *.tar)       tar xf $1    ;;
            *.tbz2)      tar xjf $1   ;;
            *.tgz)       tar xzf $1   ;;
            *.zip)       unzip $1     ;;
            *.Z)         uncompress $1;;
            *)           echo "'$1' cannot be extracted via extract()" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

# ==========================================
# ADDITIONAL SYNTAX HIGHLIGHTING
# ==========================================
# Install with: sudo pacman -S zsh-syntax-highlighting zsh-autosuggestions
if [[ -f /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]]; then
    source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
fi

if [[ -f /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh ]]; then
    source /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
fi

# ==========================================
# POWERLEVEL10K PROMPT CUSTOMIZATION
# ==========================================
# Run 'p10k configure' to customize the prompt visually
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# ==========================================
# LOCAL MACHINE-SPECIFIC CONFIGS
# ==========================================
[[ -f ~/.zshrc_local ]] && source ~/.zshrc_local
